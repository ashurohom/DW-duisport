<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add credit limit info to sale order -->
        <record id="view_sale_order_form_inherit_credit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.credit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Add credit warning -->
                <field name="partner_id" position="after">
                    <div class="alert alert-danger" role="alert" invisible="not exceeds_credit_limit">
                        <strong>Credit Limit Exceeded:</strong> This order exceeds the customer's credit limit.
                    </div>
                    
                    <!-- Add computed fields -->
                    <field name="credit_check_required" invisible="1"/>
                    <field name="exceeds_credit_limit" invisible="1"/>
                    <field name="available_credit" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>