<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Minimum Quantity field to product.template form view -->
        <record id="view_product_template_form_inherit_min_qty" model="ir.ui.view">
            <field name="name">product.template.form.inherit.min.qty</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!-- Add to Inventory page -->
                <xpath expr="//page[@name='inventory']" position="inside">
                    <group string="Inventory Rules">
                        <field name="x_min_qty"/>
                    </group>
                </xpath>
            </field>
        </record>
        
        <!-- Also add to product.product form view -->
        <record id="view_product_product_form_inherit_min_qty" model="ir.ui.view">
            <field name="name">product.product.form.inherit.min.qty</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <!-- Add to Inventory page -->
                <xpath expr="//page[@name='inventory']" position="inside">
                    <group string="Inventory Rules">
                        <field name="x_min_qty"/>
                    </group>
                </xpath>
            </field>
        </record>


       


        <record id="view_product_template_tree_inherit_min_qty" model="ir.ui.view">
            <field name="name">product.template.tree.inherit.min.qty</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <!-- Locate the tree and extend it -->
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-danger">x_below_min</attribute>
                </xpath>

                <!-- Add your field so Odoo can use it for decoration -->
                <xpath expr="//tree" position="inside">
                    <field name="x_below_min" invisible="1"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
