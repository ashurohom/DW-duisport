<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_department_time_tracking_tree" model="ir.ui.view">
            <field name="name">department.time.tracking.tree</field>
            <field name="model">department.time.tracking</field>
            <field name="arch" type="xml">
                <tree string="Department Time Tracking">
                    <field name="target_model"/>
                    <field name="stage_name"/>
                    <field name="user_id"/>
                    <field name="employee_id"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="total_duration"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_department_time_tracking_form" model="ir.ui.view">
            <field name="name">department.time.tracking.form</field>
            <field name="model">department.time.tracking</field>
            <field name="arch" type="xml">
                <form string="Department Time Tracking">
                    <sheet>
                        <group>
                            <field name="target_model"/>
                            <field name="stage_name"/>
                            <field name="user_id"/>
                            <field name="employee_id"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="total_duration"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_department_time_tracking" model="ir.actions.act_window">
            <field name="name">Department Time Tracking</field>
            <field name="res_model">department.time.tracking</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_department_time_tracking"
                  name="Department Time Tracking"
                  parent="crm.crm_menu_root"
                  action="action_department_time_tracking"/>
    </data>
</odoo>
