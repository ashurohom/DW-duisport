<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Journal Voucher Report Template -->
    <template id="journal_voucher_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page" style="font-family: Arial, sans-serif; padding: 20px;">
                    
                    <!-- Header -->
                    <div style="text-align: center; margin-bottom: 30px; border-bottom: 2px solid #000; padding-bottom: 10px;">
                        <h1 style="margin: 0; color: #000;">JOURNAL VOUCHER</h1>
                        <h3 style="margin: 5px 0; color: #666;">
                            <span t-field="doc.company_id.name"/>
                        </h3>
                    </div>

                    <!-- Voucher Details -->
                    <div style="display: flex; justify-content: space-between; margin-bottom: 20px;">
                        <div style="flex: 1;">
                            <table style="width: 100%;">
                                <tr>
                                    <td style="width: 120px;"><strong>Voucher No:</strong></td>
                                    <td><span t-field="doc.name"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Journal:</strong></td>
                                    <td><span t-field="doc.journal_id.name"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Reference:</strong></td>
                                    <td><span t-field="doc.ref"/></td>
                                </tr>
                            </table>
                        </div>
                        <div style="flex: 1;">
                            <table style="width: 100%;">
                                <tr>
                                    <td style="width: 120px;"><strong>Date:</strong></td>
                                    <td><span t-field="doc.date"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Status:</strong></td>
                                    <td>
                                        <span t-if="doc.state == 'posted'" style="color: green; font-weight: bold;">POSTED</span>
                                        <span t-if="doc.state == 'draft'" style="color: orange; font-weight: bold;">DRAFT</span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Journal Items Table -->
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 30px;">
                        <thead>
                            <tr style="background-color: #f8f9fa; border: 1px solid #ddd;">
                                <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Account</th>
                                <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Partner</th>
                                <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Description</th>
                                <th style="padding: 10px; border: 1px solid #ddd; text-align: right;">Debit</th>
                                <th style="padding: 10px; border: 1px solid #ddd; text-align: right;">Credit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.line_ids" t-as="line">
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <span t-field="line.account_id.display_name"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <span t-field="line.partner_id.display_name"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <span t-field="line.name"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                    <span t-field="line.debit"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                    <span t-field="line.credit"/>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="background-color: #e9ecef; font-weight: bold; border: 1px solid #ddd;">
                                <td colspan="3" style="padding: 10px; border: 1px solid #ddd; text-align: right;">TOTAL:</td>
                                <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">
                                    <span t-esc="sum(line.debit for line in doc.line_ids)"/>
                                </td>
                                <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">
                                    <span t-esc="sum(line.credit for line in doc.line_ids)"/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                    <!-- Amount in Words -->
                    <div style="margin-bottom: 20px; padding: 10px; background-color: #f8f9fa; border: 1px solid #ddd;">
                        <strong>Amount in Words:</strong>
                        <span t-esc="doc.company_currency_id.amount_to_text(sum(line.debit for line in doc.line_ids))"/>
                    </div>

                    <!-- Narration -->
                    <div t-if="doc.narration" style="margin-bottom: 20px;">
                        <strong>Narration:</strong>
                        <div style="padding: 10px; border: 1px solid #ddd; margin-top: 5px;">
                            <span t-field="doc.narration"/>
                        </div>
                    </div>

                    <!-- Signatures -->
                    <div style="margin-top: 50px; border-top: 2px solid #000; padding-top: 20px;">
                        <div style="display: flex; justify-content: space-between;">
                            <div style="text-align: center; width: 30%;">
                                <div style="border-top: 1px solid #000; padding-top: 5px;">
                                    Prepared By
                                </div>
                            </div>
                            <div style="text-align: center; width: 30%;">
                                <div style="border-top: 1px solid #000; padding-top: 5px;">
                                    Checked By
                                </div>
                            </div>
                            <div style="text-align: center; width: 30%;">
                                <div style="border-top: 1px solid #000; padding-top: 5px;">
                                    Approved By
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div style="margin-top: 30px; font-size: 12px; color: #666; text-align: center;">
                        Printed by: <span t-esc="user.name"/> | 
                        Date: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>