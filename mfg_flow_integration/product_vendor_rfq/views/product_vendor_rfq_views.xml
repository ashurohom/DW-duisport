<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- RFQ Form View -->
    <record id="view_rfq_request_form" model="ir.ui.view">
        <field name="name">rfq.request.form</field>
        <field name="model">rfq.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_rfq" string="Send RFQ to Vendors" 
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_view_comparison" string="View Comparison" 
                            type="object" class="oe_highlight"
                            invisible="state not in ['sent', 'received', 'confirmed']"/>
                    <!-- <button name="action_view_purchase_orders" string="View Purchase Orders" 
                            type="object" class="btn-primary"
                            invisible="state == 'draft'"/> -->
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,sent,received,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- <button name="action_view_purchase_orders" type="object" 
                                class="oe_stat_button" icon="fa-shopping-cart"
                                invisible="purchase_count == 0">
                            <field name="purchase_count" widget="statinfo" 
                                   string="Purchase Orders"/>
                        </button> -->
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="deadline"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Additional requirements or specifications..."/>
                    </group>
                    
                    <notebook>
                        <page string="Vendors" name="vendors">
                            <field name="vendor_line_ids">
                                <tree editable="bottom">
                                    <field name="vendor_id"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Quotes Received" name="quotes" 
                              invisible="state == 'draft'">
                            <field name="vendor_quote_ids">
                                <tree decoration-success="state == 'confirmed'" 
                                      decoration-danger="state == 'rejected'"
                                      decoration-info="state == 'received'">
                                    <field name="vendor_id"/>
                                    <field name="unit_price"/>
                                    <field name="total_price" sum="Total"/>
                                    <field name="delivery_time"/>
                                    <field name="payment_terms"/>
                                    <field name="state"/>
                                    <button name="action_receive_quote" 
                                            string="Mark Received" type="object" 
                                            icon="fa-check"
                                            invisible="state != 'sent'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                    <group invisible="not confirmed_quote_id">
                        <group>
                            <field name="confirmed_quote_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- RFQ Tree View -->
    <record id="view_rfq_request_tree" model="ir.ui.view">
        <field name="name">rfq.request.tree</field>
        <field name="model">rfq.request</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" 
                  decoration-warning="state == 'sent'"
                  decoration-success="state == 'confirmed'">
                <field name="name"/>
                <field name="date"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="deadline"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- RFQ Search View -->
    <record id="view_rfq_request_search" model="ir.ui.view">
        <field name="name">rfq.request.search</field>
        <field name="model">rfq.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="product_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- RFQ Action -->
    <record id="action_rfq_request" model="ir.actions.act_window">
        <field name="name">RFQ</field>
        <field name="res_model">rfq.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first RFQ
            </p>
            <p>
                Request quotations from vendors for products.
            </p>
        </field>
    </record>

</odoo>