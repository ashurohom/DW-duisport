<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vendor Quote Form View -->
    <record id="view_rfq_vendor_quote_form" model="ir.ui.view">
        <field name="name">rfq.vendor.quote.form</field>
        <field name="model">rfq.vendor.quote</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_receive_quote" string="Mark as Received" 
                            type="object" class="oe_highlight"
                            invisible="state != 'sent'"/>
                    <button name="action_confirm_quote" string="Confirm Quote" 
                            type="object" class="oe_highlight"
                            invisible="state != 'received'"/>
                    <button name="action_reject_quote" string="Reject Quote" 
                            type="object" 
                            invisible="state not in ['sent', 'received']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="sent,received,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(purchase.purchase_rfq)d" type="action" 
                                class="oe_stat_button" icon="fa-shopping-cart"
                                context="{'search_default_order_id': purchase_order_id}"
                                invisible="not purchase_order_id">
                            <span>View Purchase Order</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="rfq_id" readonly="1"/>
                            <field name="vendor_id" readonly="1"/>
                            <field name="purchase_order_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Vendor Response">
                        <group>
                            <field name="unit_price"/>
                            <field name="total_price" readonly="1"/>
                        </group>
                        <group>
                            <field name="delivery_time"/>
                            <field name="payment_terms"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="notes" placeholder="Additional terms, conditions, or notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vendor Quote Tree View -->
    <record id="view_rfq_vendor_quote_tree" model="ir.ui.view">
        <field name="name">rfq.vendor.quote.tree</field>
        <field name="model">rfq.vendor.quote</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'confirmed'"
                  decoration-danger="state == 'rejected'"
                  decoration-warning="state == 'sent'"
                  decoration-info="state == 'received'"
                >
                <field name="name"/>
                <field name="rfq_id"/>
                <field name="vendor_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="unit_price" widget="monetary"/>
                <field name="total_price" sum="Total" widget="monetary"/>
                <field name="delivery_time"/>
                <field name="is_l1"/>
            <field name="is_l2"/>
            <field name="is_l3"/>
                <field name="state"/>
                <button name="action_confirm_quote" string="Confirm" 
                        type="object" icon="fa-check-circle"
                        class="btn-success"
                        invisible="state != 'received'"/>
                <button name="action_reject_quote" string="Reject" 
                        type="object" icon="fa-times-circle"
                        class="btn-danger"
                        invisible="state not in ['sent', 'received']"/>
            </tree>
        </field>
    </record>

    <!-- Vendor Quote Search View -->
    <record id="view_rfq_vendor_quote_search" model="ir.ui.view">
        <field name="name">rfq.vendor.quote.search</field>
        <field name="model">rfq.vendor.quote</field>
        <field name="arch" type="xml">
            <search>
                <field name="rfq_id"/>
                <field name="vendor_id"/>
                <field name="product_id"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <group expand="0" string="Group By">
                    <filter string="RFQ" name="group_rfq" context="{'group_by': 'rfq_id'}"/>
                    <filter string="Vendor" name="group_vendor" context="{'group_by': 'vendor_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vendor Quote Action -->
    <record id="action_rfq_vendor_quote" model="ir.actions.act_window">
        <field name="name">Vendor Quotes</field>
        <field name="res_model">rfq.vendor.quote</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_received': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No vendor quotes yet
            </p>
            <p>
                Vendor quotes will appear here after sending RFQs.
            </p>
        </field>
    </record>

</odoo>