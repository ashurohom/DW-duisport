<odoo>
    <record id="view_expense_record_tree" model="ir.ui.view">
        <field name="name">expense.record.tree</field>
        <field name="model">expense.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="amount"/>
                <field name="move_id"/>
                <field name="payment_id"/>
                <field name="expense_tag_id"/>
            </tree>
        </field>
    </record>

    <record id="view_expense_record_form" model="ir.ui.view">
        <field name="name">expense.record.form</field>
        <field name="model">expense.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="amount"/>
                        <field name="currency_id"/>
                        <field name="move_id"/>
                        <field name="payment_id"/>
                        <field name="expense_tag_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
